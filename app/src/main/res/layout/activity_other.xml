<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.OtherActivity">

    <TextView
        android:id="@+id/sayinText"
        android:layout_width="329dp"
        android:layout_height="38dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="41dp"
        android:text="Sayın,"
        android:textSize="24dp"
        android:textColor="#100001"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hosgeldinizText" />

    <TextView
        android:id="@+id/typeAcıklamatext"
        android:layout_width="334dp"
        android:layout_height="155dp"
        android:layout_marginTop="78dp"
        android:textColor="#FF5722"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acıklamaText" />

    <TextView
        android:id="@+id/acıklamaText"
        android:layout_width="323dp"
        android:layout_height="98dp"
        android:layout_marginTop="30dp"
        android:gravity="start|top"
        android:text="Açıklama ... "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sayinText" />

    <TextView
        android:id="@+id/hosgeldinizText"
        android:layout_width="273dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="BAŞARILI ..."
        android:textColor="#8BC34A"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>